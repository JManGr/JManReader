<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="JManReader.Views.MainPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Open" Command="{Binding CmdOpen}"/>
    </ContentPage.ToolbarItems>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Orientation="Horizontal">
            <Button Text="0pen" Command="{Binding CmdOpen}"></Button>
        </StackLayout>

        <ListView Grid.Row="1" ItemsSource="{Binding Chapters}" HasUnevenRows="True" CachingStrategy="RecycleElement" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                    <Label Text="{Binding ChapterText}" VerticalOptions="CenterAndExpand" FontSize="{Binding FontSize}"></Label>
                        </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    

</ContentPage>